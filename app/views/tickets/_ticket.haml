=div_for ticket, :class=>"ticket_for_tabs" do 
  %p    
    %span.name
      #{ticket.student.name}
    %span.arrows &raquo; 
    #{ticket.corresponding_to}
    %span{:style=>"float:right"}
      = link_to 'Detalles', ticket_path(ticket)
      = check_box_tag('ticket_to_report', ticket.id, false)
  %p
    %span.title
      = ticket.title 
    %span.arrows
      &raquo; 
    %span.description
      = truncate ticket.description, :length=>100
    

