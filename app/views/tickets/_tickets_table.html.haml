%table.tickets-table
  %tr
    %th
      Responsable
    %th
      Asunto
    %th
      Estudiante
    %th
      Acciones
    %th
      Fecha
    %th
      Exportar
      .export-links
        =link_to "Todos", nil, :id=>'checkall-button', :class=>tickets.first.status
  -for ticket in tickets
    %tr 
      %td
        =ticket.responsible || "Pendiente"
      %td
        =t ticket.corresponding_to
      %td
        =ticket.student
      %td
        =link_to "Resolver", responsible_ticket_path(ticket)
        |        
        =link_to "Detalles", ticket_path(ticket)
      %td
        = t ticket.created_at.to_date.to_formatted_s(:short)
      %td
        = check_box_tag('ticket_to_report', ticket.id, false, :class=>ticket.status)

