%h1= t '.title'
%p
  = link_to t('back'), tickets_path
  |
  = link_to t('edit'), edit_ticket_path(@ticket)
  |
  = link_to 'PDF',  ticket_path(@ticket, :format => :pdf)
  |
  = link_to t('destroy'), ticket_path(@ticket), :method=>'delete', :confirm => t('are_you_sure')
%hr

%p
  = flag_image(@ticket)
  = t(@ticket.status)
  
%table.details
  %tr
    %td Alumno
    %td= @ticket.student
  %tr
    %td Responsable
    %td= @ticket.responsible || link_to("Asignar Responsable", responsible_ticket_path)
  -if @ticket.course?
    %tr
      %td Curso
      %td=  @ticket.course
  -if @ticket.teacher?
    %tr
      %td Profesor
      %td=  @ticket.teacher
  %tr
    %td Tema  
    %td= corresponding_to_path(@ticket)

%blockquote  
  = @ticket.description
      
%table
  %thead
    %tr
      %th
        Fecha
      %th
        Accion
      %th
        Comentarios(Alumno)
      %th
        Comentarios(Administrativo)
  %tbody
    -for change in @ticket.changes
      %tr
        %td
          = l change.created_at, :format=>:short
        %td
          =t change.change_type
        %td
          =change.extern_comments
        %td
          =change.intern_comments
%p
  = link_to t('new_change'), new_ticket_change_path(@ticket) if @ticket.responsible?
  = link_to "Asignar Responsable para hacer cambios", responsible_ticket_path(@ticket) unless @ticket.responsible?

