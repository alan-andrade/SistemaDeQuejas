= form_for(@ticket) do |f|
  = field_set_tag do 
    - if @ticket.errors.any?
      #errorExplanation
        %h2= "#{pluralize(@ticket.errors.count, 'error')} prohibited this user from being saved:"
        %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg
    
    .field
      = f.label t('.student_id')
      = f.text_field :student_id
    .field
      = f.label t('.course_id')
      = f.text_field  :course_id
    .field
      = f.label t('.teacher_id')
      = f.text_field  :teacher_id
    .field  
      = f.label t('.ticket_type')
      %small  Con que tienes problema?
      %br
      %p
        -for subject in Ticket::CORRESPONDING_TO
          = f.radio_button  :corresponding_to, subject
          = t subject
          %br
    .field
      = f.label t('.description')
      = f.text_area :description

    .actions
      = f.submit t('.send')
