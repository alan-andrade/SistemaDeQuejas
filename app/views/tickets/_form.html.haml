= form_for(@ticket) do |f|
  = field_set_tag do 
    - if @ticket.errors.any?
      #errorExplanation
        %h2= "#{pluralize(@ticket.errors.count, 'error')} prohibited this user from being saved:"
        %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg
    
    .field
      = f.label "Nombre del estudiante"
      = f.text_field :student
   
    .field  
      = f.label "Tipo de Queja"     
      -for keys in Ticket::CORRESPONDING_MAP
        -keys.each_pair do |general, subtopics|
          %i
            = t general
          - subtopics.each do |subtopic|            
            %p.tree
              = f.radio_button :corresponding_to, subtopic
              = t subtopic
          
    .field
      = f.label "Descripci√≥n"
      = f.text_area :description

    .actions
      = f.submit t('.send')
