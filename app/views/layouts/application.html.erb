<!DOCTYPE html>
<html>
<head>
  <title>Sistema De Quejas - UDLAP</title>
  <%= stylesheet_link_tag :all %>
  <%= yield :css %>
  <%= javascript_include_tag :defaults %>
  <%= yield :script %>
  <%= csrf_meta_tag %>
</head>
<body>
<% unless flash.empty? %>
<%= content_tag :div, :class=>:flash, :style=>"display:none" do -%>
  <% flash.each_pair do |key, msg| %>
    <p id="#{key}"><%= msg %></p>
  <% end %>
<% end %>
<% end %>
<div id="container">
  <%= yield %>
  <div>
    SESSION: <%= session[:user] %>
  </div>
</div>
</body>
</html>
