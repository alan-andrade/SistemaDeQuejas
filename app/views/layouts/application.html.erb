<!DOCTYPE html>
<html>
<head>
  <title>Sistema De Quejas - UDLAP</title>
  <%= stylesheet_link_tag :all %>
  <%= yield :css %>
  <%= javascript_include_tag :defaults %>
  <%= yield :script %>
  <%= csrf_meta_tag %>
</head>
<body>
  <% unless flash.empty? %>
    <%= content_tag :div, :class=>:flash, :style=>"display:none" do -%>
      <% flash.each_pair do |key, msg| %>
        <p id="<%=key%>"><%= msg %></p>
      <% end %>
    <% end %>
  <% end %>
  
  <div id="container">
    <div id="user-nav">
      <% if !!@current_user %>
        <p>Bienvenido, <%= @current_user.name %></p>
        <%= link_to "Salir", logout_path %>
      <% else %>
        <%= link_to "Entrar", login_path %>
      <% end %>
    </div>
    <%= yield %>  
  </div>
</body>
</html>
