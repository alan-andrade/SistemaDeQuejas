!!! 5

%hml
  %head
    %title Sistem de Quejas - UDLAP

  = stylesheet_link_tag :all
  = include_css 'bb-theme/jquery-ui.css'
  = yield :css
  = javascript_include_tag :defaults
  = yield :script
  = csrf_meta_tag

  %body
    -flash.each_pair do |key, msg|
      .flash
        %div{ :id =>  key}          
          %p=msg
      
    .container_12#header
      .grid_8#logo
        =image_tag "http://www.udlap.mx/images/logoUDLA.jpg"
      .grid_4#nav-user
        - if @current_user.nil?
          %i Ingresa al Sistema
          = link_to "Entrar", login_path
        - else
          %div
            =@current_user.name
            %span
              %i
                =@current_user.uid
          %div
            =link_to "Salir", logout_path
      .clear
      
    -if content_for? :nav  
      .container_12
        .grid_12#nav-bar
          =yield  :nav
        .clear
    .container_12#container
      =yield
